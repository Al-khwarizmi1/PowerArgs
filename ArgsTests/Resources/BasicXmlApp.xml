<App>
  <StackPanel AutoSize="true" Orientation="Vertical">
    <StackPanel AutoSize="true" Orientation="Horizontal" Fill="Horizontal">
      <Spinner Foreground="Green" IsSpinning="true"></Spinner>
      <Label Text="Name" Fill="Horizontal" />
    </StackPanel>
    <TextBox Value="{Name}" Background="Gray" Foreground="Black" />
    <Button Pressed="SubmitClicked" Shortcut="Enter" Text="Submit"/>
  </StackPanel>
</App>